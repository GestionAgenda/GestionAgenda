{% extends 'AdminTemplateBundle:layout:base-layout.html.twig' %}
{% block title %}Editer une classe{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/styles/admin-lte-all.css') }}" />
{% endblock %}
{% block javascripts_head %}{% endblock %}
{% block page_title %}{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block page_content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="container">
        <div class="row">
            <div class="col-md-11">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Editer une classe</h3>
                        <p> *Champs obligatoires</p>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            {{ form_label(form.degreeTitle,'Degré') }}
                            {{ form_errors(form.degreeTitle) }}
                            {{ form_widget(form.degreeTitle, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.number, 'Numéro de classe') }}
                            {{ form_errors(form.number) }}
                            {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="box-footer">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/scripts/common.js') }}"></script>
    <script src="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/scripts/admin-lte.js') }}"></script>
{% endblock %}
{% block javascripts_inline %}{% endblock %}