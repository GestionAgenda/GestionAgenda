{% extends 'AdminTemplateBundle:layout:base-layout.html.twig' %}
{% block title %}Liste des classes{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/styles/admin-lte-all.css') }}" />
{% endblock %}
{% block javascripts_head %}{% endblock %}
{% block page_title %}{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block page_content %}
    <div class="container">
    	<div class="row">
    		<div class="col-md-11">
    			<div class="box box-primary">
		    		<div class="box-header with-border">
		              	<h3 class="box-title">Liste des classes</h3>
						<p><a class="btn bg-olive btn-flat margin" href="{{ path('classe_add') }}">Ajouter une classe</a></p>
		            </div>
		            <div class="box-body">
						<div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
							<div class="col-sm-11"><table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
									<thead>
										<tr role="row">
											<th class="sorting" aria-controls="example2" rowspan="1" colspan="1">Classe </th>
											<th>Modifier</th>
											<th>Supprimer</th>
											<th>Détails</th>


										</tr>
									</thead>
									<tbody>
									{% for classe in classes %}
										<tr role="row" class="odd">
											<td >{{ classe.degreeTitle}} {{ classe.numero}}</td>
											<td><a class="btn btn-block btn-info btn-xs" href="{{ path('classe_edit', {'id': classe.id }) }}">Modifier</a></td>
											<td><a class="btn btn-block btn-info btn-xs" href="{{ path('classe_delete', {'id': classe.id }) }}" onclick="return confirm('Êtes-vous sur de supprimer cette classe ?')">Supprimer</a></td>
											<td><a class="btn btn-block btn-info btn-xs" href="{{ path('classe_show', {'id': classe.id }) }}">Détails</a></td>
										</tr>
									{% endfor %}
									</tbody>
									<tfoot>
										<tr>
											<th rowspan="1" colspan="1">Classe</th>
											<th rowspan="1" colspan="1">Modifier</th>
											<th rowspan="1" colspan="1">Supprimer</th>
											<th rowspan="1" colspan="1">Détails</th>
										</tr>
									</tfoot>
								</table>
							</div>
						</div>
				   </div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}

    <script src="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/scripts/common.js') }}"></script>
    <script src="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/scripts/admin-lte.js') }}"></script>
	<script src="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/scripts/admin-lte-all.js') }}"></script>
{% endblock %}
{% block javascripts_inline %}{% endblock %}
