{% extends 'AdminTemplateBundle:layout:base-layout.html.twig' %}
{% block title %}Consulter un élève{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/styles/admin-lte-all.css') }}" />
{% endblock %}
{% block javascripts_head %}{% endblock %}
{% block page_title %}{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block page_content %}
    <div class="container">
    	<div class="row">
    		<div class="col-md-11">
    			<div class="box box-primary">
		    		<div class="box-header with-border">
		              <h3 class="box-title">Consulter un élève</h3>
		            </div>
		            <div class="box-body">
							<p>  <img src="{{ asset('/img/upload/avatar/'~student.avatar) }}" class="profile-user-img img-responsive img-circle"  /></p>
						<hr></hr>
					    <div class="form-group">
							Nom : {{student.lastname}} {{student.firstname}}
					    </div>
						<div class="form-group">
							Classe : {{student.classe}}
						</div>

						<div class="form-group">
							Date de naissance : {{student.dateNaissance | date("d/m/Y")}}
						</div>
						<div class="form-group">
							Téléphone : {{  student.telephone }}
						</div>
						<div class="form-group">
							E-mail : {{  student.email }}
						</div>
					    <div class="box-footer">
							<a class="btn btn-primary" href="{{ path('student_edit', {'id': student.id }) }}">Modifier</a>
							<a class="btn btn-primary" href="{{ path('student_delete', {'id': student.id }) }}" onclick="return confirm('Êtes-vous sur de supprimer cet élève ?')">Supprimer</a>
					    </div>
				   </div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/scripts/common.js') }}"></script>
    <script src="{{ asset('bundles/admintemplate/static/'~ app.environment ~'/scripts/admin-lte.js') }}"></script>
{% endblock %}
{% block javascripts_inline %}{% endblock %}
