{% trans_default_domain 'FOSUserBundle' %}
 <div class="container">
    	<div class="row">
    		<div class="col-md-12">
    			<div class="box box-primary">
		    		<div class="box-header with-border" ><h3>Consultation du profil</h3>
					</div>
					 <div class="box-body">
					 	{% if app.user.avatar %}
					 		<p>  <img src="{{ asset('/img/upload/avatar/'~app.user.avatar) }}" class="profile-user-img img-responsive img-circle"  /></p>
					 	{% else %}
					 		<p>  <img src="{{ asset('/img/upload/avatar/avatar.png') }}" class="profile-user-img img-responsive img-circle"  /></p>
					 	{% endif %}
					 	<hr></hr>
		            	<p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
						<p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
						<p> Membre depuis {{app.user.membersince | date("d/m/Y") }}</p>
						<p> Nom : {{app.user.lastname}}</p>
						<p> Prénom : {{app.user.firstname}}</p>
						<p> Profession : {{app.user.title}} </p>
						<p> N° de tel : {{app.user.telephone}} </p>
					</div>
					<div class="box-footer">
						<a class="btn btn-primary" href="{{ path('fos_user_profile_show', {'id': app.user.id }) }}">Éditer profil</a>
						<a class="btn btn-primary" href="{{ path('fos_user_change_password', {'id': app.user.id }) }}">Éditer mot de passe</a>

					</div>
			   </div>
			</div>
		</div>
	</div>
</div>
